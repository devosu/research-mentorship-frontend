{
  "verbose": 2,
  "hooks": {
    "before:init": [
      "pnpm install",
      "pnpm run lint",
      "pnpm test",
      "pnpm run build"
    ],
    "after:bump": [
      "echo 'After bump'"
    ],
    "after:release": [
      "echo 'After release'"
    ]
  },
  "git": {
    "commit": false,
    "requrieCleanWorkingDir": true,
    "tag": true,
    "tagName": "v${version}"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "header": "# Changelog",
      "preset": {
        "name": "conventionalcommits"
      }
    }
  }
}